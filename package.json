{
    "name": "php-runner",
    "displayName": "php-runner",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.44.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "github",
        "url": "https://github.com/qzsiniong/vscode-php-runner.git"
    },
    "preview": true,
	"publisher": "qinzisong",
    "activationEvents": [
        "onLanguage:php"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "php-runner.run",
                "title": "Hello World"
            }
        ],
        "configuration": {
            "title": "php-runner",
            "properties": {
                "php-runner.methodNames": {
					"scope": "resource",
					"type": ["string", "array"],
					"pattern": "[a-zA-Z_][a-zA-Z0-9_]*",
					"items": {
						"type":"string"
					},
					"uniqueItems": true,
                    "default": "exec",
                    "description": "Run 要执行的方法名"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.44.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.26.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
